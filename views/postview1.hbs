    <div id="middle-container" style="background-image: linear-gradient(135deg, #70e4df, #78e1df, #8ae4df,#85e6df,#94e4e0,#a7dde1,#aedae1,#b7e0e1,#c0e0e2,
                            #cae2e3,#d6e5e3,#e1e0e3,#e9e1e3,#efe5e3,#f5e9e2,#fdece3)">
        <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
        <div class="post">
        {{#each info}}
        <div class="resume">
            <div class="resume_left">
                <div class="resume_profile">
                    <img src="{{ image }}" alt="profile_pic">
                </div>

                <div class="resume_content">
                    <div class="resume_item resume_info">
                        <div class="title">
                            <p class="bold">{{place}}</p>
                            <p class="regular">{{city}}, {{state}}, {{country}}</p>
                            <p class="regular">Budget : {{budget}}</p>
                            <p class="regular">Rating : {{rating}}/5</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="resume_right" style="background-color:transparent;">
                <div class="resume_item resume_work">
                    <div class="title">
                        <p class="bold">{{username}}</p>
                        {{ description }}
                    </div>
                    <form action="/feed" method="post" style="padding:5% 70% 0% 0%;">
                        <button class="btn" style="background-color:#77d0cf;" href="FEED">Browse Posts</button>
                    </form>
                </div>
                
            </div>
        </div>
        {{/each}}
        </div>
    </div>
